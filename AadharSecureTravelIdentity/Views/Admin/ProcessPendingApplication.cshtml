@model AadharSecureTravelIdentity.Models.ApplicationViewModel

@{
    ViewBag.Title = "ProcessPendingApplication";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@{
    var pendingApplicationsIds = new List<int>();
    
    foreach(var applications in Model.PendingApplications)
    {
        pendingApplicationsIds.Add(applications.ApplicationNumber);
    }
}

@using (Html.BeginForm("ProcessPendingApplication", "Admin", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row ml-0 font-weight-bold">PROCESS AADHAR CARD</div>
        <hr />
        <div class="row py-1">
            <div class="col text-nowrap">Pending Application Number : </div>
            <div class="col">
                @Html.DropDownListFor(
                    a => a.SelectedApplicationId, new SelectList(pendingApplicationsIds)
                )
            </div>
        </div>
        <div class="row py-1">
            <div class="col">
                <input type="submit" value="Submit" />
            </div>
        </div>
    </div>
}