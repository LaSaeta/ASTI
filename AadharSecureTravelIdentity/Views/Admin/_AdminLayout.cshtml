<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container-fluid">
        @Html.Partial("_Heading")
        <div class="row m-2">
            <div class="col-3 bg-light">
                @if (TempData["IsFromHome"] != null && (bool)TempData["IsFromHome"])
                {
                    Html.RenderPartial("_AdminLeftNavPartial");
                }
                else
                {
                    Html.RenderPartial("_AdminLeftNavStaffRegisterPartial");
                }

            </div>
            <div class="col-9">
                @RenderSection("featured", required: false)
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/appjs")
</body>
</html>
