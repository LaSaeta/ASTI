<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container-fluid">
        @Html.Partial("_Heading")
        <div class="row m-2">
            <div class="col-4">
                <div class="row py-1">
                    Citizen
                    <button type="button" class="btn btn-link py-0">Register</button>
                    Here
                </div>
                <div class="row py-1">
                    Registered users login here
                </div>
                <div class="row py-1">
                    @Html.Partial("_LeftNavLogin")
                </div>
            </div>
            <div class="col-8">
                @RenderSection("featured", required: false)
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/appjs")
</body>
</html>
